.navigator {
  padding: 20rpx 50rpx;
  position: relative;
  display: flex;
  align-items: center;
   /* border-top: 1rpx dashed #D8D8D8 ;  */
}
.navigator::after {
  content: " ";
  position: absolute;
  left: 50rpx;
  top: 0;
  right: 50rpx;
  height: 1px;
  border-top: 1rpx dashed #D8D8D8;
  color: #D8D8D8;
}
.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #D8D8D8;
  color: #D8D8D8;
}
.navigator:first-child:before {
  display: none;
}
.navigator-text {
  font-size: 11pt;
  flex: 1;
  color: #aaa;
}
.navigator-text-name {
  font-size: 12pt;
  flex: 1;
  color: #50cc99;
}
.navigator-image {
  height: 60rpx;
  width: 60rpx
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 0rpx;
}


.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
} 
.touch-item {
 font-size: 12pt;
 display: flex;
 justify-content: space-between;
 border-top:1rpx dashed #e6e6e6;
 width: 100%;
 overflow: hidden
}
.content {
 color: #aaa;
 width: 100%;
 padding: 10px 0 10px 20rpx;
 line-height: 80rpx;
 margin-right:0;
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(180rpx);
 transform: translateX(180rpx);
 margin-left: -140rpx
}
.content.name{
  color: #50cc99;
}
.content button{
  margin-top: 10rpx;
}
.del {
 background-color: orangered;
 width: 300rpx;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
 color: #fff;
 -webkit-transform: translateX(200rpx);
 transform: translateX(200rpx);
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}

